@model DevoloperJokesApp.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<div class="container">
    <div class="row">
        <div class="col-md-4 offset-4">
            <h1>@ViewData["Title"]</h1>
            <form asp-action="Register" asp-controller="Account" class="mt-3">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly"></div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" type="email" placeholder="Email Address" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" placeholder="Password" class="form-control">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPasword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPasword" type="password" placeholder="Confirm Password" class="form-control">
                    <span class="text-danger" asp-validation-for="ConfirmPasword"></span>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>
