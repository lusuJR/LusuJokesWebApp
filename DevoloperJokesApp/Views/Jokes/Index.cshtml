@model IEnumerable<DevoloperJokesApp.ViewModels.JokeViewModel>

@{
    ViewData["Title"] = "Index";
}

@* <h1>Index</h1> *@

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JokeQuestion)
            </th>
            <th>Author</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JokeQuestion)
            </td>
            <td>@item.Developer</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-lg">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-lg">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-lg">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
